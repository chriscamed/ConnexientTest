<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/user_image_view"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/placeholder" />

    <android.support.constraint.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_weight="1">

        <TextView
            android:id="@+id/user_name_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jackson, Dylan"
            android:textColor="@color/blue"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/street_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="3972 Adams St"
            app:layout_constraintTop_toBottomOf="@id/user_name_text_view" />

        <TextView
            android:id="@+id/city_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Medford"
            app:layout_constraintTop_toBottomOf="@id/street_text_view" />

        <TextView
            android:id="@+id/state_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kentucky, 54509"
            app:layout_constraintTop_toBottomOf="@id/city_text_view" />

    </android.support.constraint.ConstraintLayout>

    <TextView
        android:id="@+id/user_gender_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="M"
        android:textColor="@color/darkBrown"
        android:textSize="24sp" />

</LinearLayout>